[flake8]
ignore = E402, W503
max-line-length = 100
exclude =
    migrations
    __pycache__
    manage.py
    settings.py
    env
    .env
    venv
per-file-ignores =
    ./app/__init__.py:F401
    ./app/models/__init__.py:F401
    ./app/models/message/__init__.py:F401
    ./app/rest/__init__.py:F401
    ./app/rest/v1_0/email/__init__.py:F401
    ./app/rest/v1_0/message/__init__.py:F401
    ./app/rest/v1_0/settings/__init__.py:F401
    ./app/rest/v1_0/social/__init__.py:F401
    ./app/routes/__init__.py:F401
    ./app/sock/__init__.py:F401
    ./app/util/email/reset_password_email.py:E501
    ./app/util/email/verification_email.py:E501
